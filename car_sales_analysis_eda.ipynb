# Car Sales Analysis: Data Visualization and Insights

# Importing required libraries
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

# Load Dataset
file_path = "car.csv"  # Update the path as needed
data = pd.read_csv(file_path)

# Step 1: Distribution of MSRP (Car Prices)
plt.figure(figsize=(10, 6))
sns.histplot(data=data, x="MSRP", kde=True, bins=30, color="blue", alpha=0.7)
plt.title("Distribution of Car Prices (MSRP)", fontsize=16)
plt.xlabel("MSRP (Car Price)", fontsize=12)
plt.ylabel("Frequency", fontsize=12)
plt.grid(True, alpha=0.3)
plt.show()

# Step 2: Relationship Between Engine HP and MSRP
plt.figure(figsize=(10, 6))
sns.scatterplot(data=data, x="Engine HP", y="MSRP", alpha=0.6, color="green")
plt.title("Relationship Between Engine HP and MSRP", fontsize=16)
plt.xlabel("Engine Horsepower", fontsize=12)
plt.ylabel("MSRP (Price)", fontsize=12)
plt.grid(True, alpha=0.3)
plt.show()

# Step 3: Correlation Heatmap
plt.figure(figsize=(12, 8))
numeric_cols = data.select_dtypes(include=["float64", "int64"]).columns
corr_matrix = data[numeric_cols].corr()

sns.heatmap(corr_matrix, annot=True, cmap="coolwarm", fmt=".2f", linewidths=0.5)
plt.title("Correlation Heatmap of Numerical Features", fontsize=16)
plt.show()

# Step 4: Popular Car Models by Manufacturer
popular_makes = data["Make"].value_counts().head(10)

plt.figure(figsize=(10, 6))
sns.barplot(x=popular_makes.values, y=popular_makes.index, palette="viridis", alpha=0.8)
plt.title("Top 10 Popular Car Manufacturers", fontsize=16)
plt.xlabel("Number of Records", fontsize=12)
plt.ylabel("Car Manufacturer", fontsize=12)
plt.show()

# Step 5: Price Comparison by Driven Wheels
plt.figure(figsize=(10, 6))
sns.boxplot(data=data, x="Driven_Wheels", y="MSRP", palette="pastel")
plt.ylim(0, 100000)  # Limiting the y-axis for readability; adjust as needed
plt.title("Price Distribution by Driven Wheels", fontsize=16)
plt.xlabel("Driven Wheels", fontsize=12)
plt.ylabel("MSRP (Price)", fontsize=12)
plt.show()

# Step 6: Transmission Types Distribution
plt.figure(figsize=(10, 6))
sns.countplot(data=data, x="Transmission Type", palette="Set2", order=data["Transmission Type"].value_counts().index)
plt.title("Distribution of Transmission Types", fontsize=16)
plt.xlabel("Transmission Type", fontsize=12)
plt.ylabel("Count", fontsize=12)
plt.grid(axis='y', alpha=0.3)
plt.show()

# Step 7: City MPG vs Highway MPG
plt.figure(figsize=(10, 6))
sns.scatterplot(data=data, x="city mpg", y="highway MPG", color="purple", alpha=0.7)
plt.title("City MPG vs. Highway MPG", fontsize=16)
plt.xlabel("City MPG", fontsize=12)
plt.ylabel("Highway MPG", fontsize=12)
plt.grid(True, alpha=0.3)
plt.show()

# Step 8: Average MSRP Over the Years
avg_price_per_year = data.groupby("Year")["MSRP"].mean().reset_index()

plt.figure(figsize=(10, 6))
sns.lineplot(data=avg_price_per_year, x="Year", y="MSRP", marker="o", color="blue")
plt.title("Average Car Price Over the Years", fontsize=16)
plt.xlabel("Year", fontsize=12)
plt.ylabel("Average MSRP", fontsize=12)
plt.grid(True, alpha=0.3)
plt.show()